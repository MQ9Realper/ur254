<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemholder"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/commentitem_profilelayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/txtFriendCommentImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/profile_photo" />

        <CheckBox
            android:id="@+id/chkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:theme="@style/MyCheckBox" />

        <com.patriot.ur254.views.Txt
            android:id="@+id/txtFriendCommentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtFriendCommentImage"
            android:layout_marginEnd="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginStart="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/txtFriendCommentImage"
            android:layout_toRightOf="@+id/txtFriendCommentImage"
            android:text="Name"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.patriot.ur254.views.Txt
            android:id="@+id/txtCommentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtFriendComment"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:text="mno"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"
            android:textStyle="italic"
            android:visibility="gone" />

        <com.patriot.ur254.views.Txt
            android:id="@+id/txtFriendComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtFriendCommentName"
            android:layout_alignStart="@+id/txtFriendCommentName"
            android:layout_below="@+id/txtFriendCommentName"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:text="number "
            android:textSize="14sp" />

        <com.patriot.ur254.views.Txt
            android:id="@+id/userNumber"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/txtFriendCommentName"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>